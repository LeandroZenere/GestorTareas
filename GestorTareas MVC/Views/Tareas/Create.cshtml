
                   @model GestorTareas_MVC.Models.Tarea

@{
    Layout = default;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Task</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(45deg, #FFE3C3, #FFE2C1);
            color: #030331;
        }
        .form-group {
            margin-bottom: 1rem;
        }
        label {
            color: #030331;
            font-weight: 700;
        }

        .btn-primary-ghost {
            background-color: transparent;
            border: 2px solid #030331;
            color: #030331;
        }

            .btn-primary-ghost:hover {
                background-color: #030331;
                color: #FFE3C3;
            }

        .btn-secondary-ghost {
            background-color: transparent;
            border: 2px solid #030331;
            color: #030331;
        }

            .btn-secondary-ghost:hover {
                background-color: #030331;
                color: #FFE3C3;
            }


        .container {
            font-family: 'Montserrat Thin', sans-serif;
        }

        .text-bold {
            font-weight: 900;
        }

        .titulo-grande {
            font-size: 2.3rem;
            white-space: nowrap;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <h2 class="text-center mb-4 text-bold titulo-grande">¡CREA UNA NUEVA TAREA!</h2>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label">Título</label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label">Descripción:</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaVencimiento" class="control-label">Fecha de expiración:</label>
                        <input asp-for="FechaVencimiento" class="form-control" type="date" min="@DateTime.Now" />
                        <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Prioridad" class="control-label">Prioridad:</label>
                        <select asp-for="Prioridad" class="form-control">
                            <option value="Baja">Baja 🟢</option>
                            <option value="Media">Media 🟡</option>
                            <option value="Alta">Alta 🔴</option>
                        </select>
                        <span asp-validation-for="Prioridad" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Completada" /> Completada
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary-ghost">AÑADIR</button>
                        <button asp-action="Index" class="btn btn-primary-ghost">VOLVER</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row justify-content-center mt-5">
            <div class="col-md-4">
                <a asp-action="Index" class="text-white">Volver</a>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>